h1 = t('views.web.profile.index.title')
hr
= link_to t('views.web.profile.index.button.add'), new_bulletin_path
= render 'search_form'
table.table.table-borderless
  thead
    tr
      th = t('views.web.profile.index.thead.title')
      th = t('views.web.profile.index.thead.state')
      th = t('views.web.profile.index.thead.created_at')
      th = t('views.web.profile.index.thead.actions')
    tbody
      - @bulletins.each do |bulletin|
        tr
          td = bulletin.title
          td = bulletin.state_label
          td = distance_of_time_in_words(bulletin.created_at, Time.current)
          td
            = link_to t('views.web.profile.index.button.show'), bulletin_path(bulletin), class: 'me-2'
            = link_to t('views.web.profile.index.button.edit'), edit_bulletin_path(bulletin), class: 'me-2'
            - if bulletin.state == 'draft'
              = link_to t('views.web.profile.index.button.send_to_moderation'),
               send_to_moderation_bulletin_path(bulletin),
               data: { turbo_method: :patch }, class: 'me-2'
            - unless bulletin.archived?
              = link_to t('views.web.profile.index.button.archive'), archive_bulletin_path(bulletin),
               data: { turbo_method: :patch, turbo_confirm: t('views.web.profile.index.confirm.archive') },
                class: 'text-danger'
= paginate @bulletins
